<?xml version="1.0" encoding="utf-8"?>
<ns.kk.customview.CustomConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <include layout="@layout/top_bar_home" android:id="@+id/topPanel"/>

    <RelativeLayout
        android:id="@+id/secondTop"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintTop_toBottomOf="@+id/topPanel"
        tools:ignore="MissingConstraints">
        <ImageView
            android:id="@+id/icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="13dp"
            android:backgroundTint="@color/white"
            android:background="@drawable/ic_buttom_four" />

        <ns.kk.customview.CustomTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:textSize="35dp"
            android:textStyle="bold"
            android:paddingLeft="3dp"
            android:layout_toRightOf="@+id/icon"
            android:text="Bookmark"/>

        <ns.kk.customview.CustomTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Clear"
            android:layout_marginTop="15dp"
            android:layout_alignParentRight="true"/>

    </RelativeLayout>


    <EditText
        android:id="@+id/bookmark_search_edt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Search Articles"
        android:layout_margin="10dp"
        android:background="@drawable/edt_bg"
        android:padding="10dp"
        app:layout_constraintTop_toBottomOf="@+id/secondTop"
        tools:ignore="MissingConstraints" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/bookmark_recyclerview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:paddingBottom="170dp"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
        app:layout_constraintTop_toBottomOf="@+id/bookmark_search_edt"
        tools:ignore="MissingConstraints" />


</ns.kk.customview.CustomConstraintLayout>