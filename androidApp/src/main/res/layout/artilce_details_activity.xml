<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <include
        android:id="@+id/topPanel"
        layout="@layout/top_bar_home" />

    <ns.kk.customview.CustomScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="20sp"
        android:scrollbars="none"
        app:layout_constraintTop_toBottomOf="@+id/topPanel">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                tools:ignore="MissingConstraints">

                <TextView
                    android:id="@+id/name_first_word_txt"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:background="@drawable/round"
                    android:gravity="center"
                    android:text="K"
                    android:fontFamily="@font/roboto_bold"
                    android:textColor="@color/white"
                    android:textSize="18sp" />

                <ns.kk.customview.CustomTextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="13dp"
                    android:layout_toRightOf="@+id/name_first_word_txt"
                    android:text="kanhai"
                    android:fontFamily="@font/roboto_regular"
                    android:textColor="@color/dark_gray" />

                <ImageView
                    android:id="@+id/article_share"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:layout_marginRight="10dp"
                    android:layout_toLeftOf="@+id/bookmark_layout"
                    android:background="@drawable/ic_share" />


                <RelativeLayout
                    android:id="@+id/bookmark_layout"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_marginTop="13dp">

                    <ImageView
                        android:id="@+id/article_row_bookmark_remove"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/ic_bookmark_remove"
                        android:visibility="visible"
                        tools:ignore="MissingConstraints" />

                    <ImageView
                        android:id="@+id/article_row_bookmark_add"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/ic_bookmark_add"
                        android:visibility="visible"
                        tools:ignore="MissingConstraints" />
                </RelativeLayout>
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp">

                <ImageView
                    android:id="@+id/speaker_icon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/ic_speaker" />

                <ns.kk.customview.CustomTextView
                    android:id="@+id/article_details_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Title"
                    android:fontFamily="@font/roboto_bold"
                    android:textSize="18sp" />

            </RelativeLayout>

            <ns.kk.customview.CustomTextView
                android:id="@+id/article_details_datetime"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20sp"
                android:text="20min" />


            <com.makeramen.roundedimageview.RoundedImageView xmlns:app="http://schemas.android.com/apk/res-auto"
                android:id="@+id/article_details_thumb"
                android:layout_width="match_parent"
                android:layout_height="285dp"
                android:layout_marginTop="20dp"
                android:background="@color/gray"
                android:scaleType="centerCrop"
                app:riv_corner_radius="10dip"
                app:riv_mutate_background="true"
                app:riv_oval="false" />

            <ns.kk.customview.CustomTextView
                android:id="@+id/article_details_lead_txt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/roboto_italic"
                android:textSize="13sp"
                android:layout_marginTop="10dp" />


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ns.kk.customview.CustomTextView
                    android:id="@+id/article_details_description"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:fontFamily="@font/roboto_regular"
                    android:text="Title lkj kjksd kajd skja d kjdf akjas dl kjdf kksdk asldkj adlkjd lajdfsf kad" />


                <LinearLayout
                    android:id="@+id/preimum_view"
                    android:visibility="gone"
                    android:padding="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="60dp"
                    android:background="@color/gray"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Read Premium Content"
                        android:textStyle="bold"
                        android:gravity="center"
                        android:textSize="26dp"
                        android:textColor="@color/black"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:gravity="center"
                        android:text="You will get access to all the premiu"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="50dp"
                        android:gravity="center"
                        android:text="Start ar $10.99/month"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:background="@color/blue"
                        >
                        <TextView
                            android:id="@+id/planView_Event"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:padding="6dp"
                            android:textColor="@color/white"
                            android:text="View Plans"/>
                    </LinearLayout>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Already Subscripted?"
                        android:layout_marginTop="20sp"
                        android:gravity="center"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="For support contact"
                        android:layout_marginTop="20sp"
                        android:gravity="center"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="wecare@gmail.con"
                        android:gravity="center"/>
                </LinearLayout>

            </RelativeLayout>


            <ns.kk.customview.CustomRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="250dp"
                android:padding="10dp"
                android:layout_margin="10dp">

                <com.google.android.gms.ads.admanager.AdManagerAdView
                    xmlns:ads="http://schemas.android.com/apk/res-auto"
                    android:id="@+id/adManagerAdView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    ads:adSize="MEDIUM_RECTANGLE"
                    ads:adUnitId="/6499/example/banner">
                </com.google.android.gms.ads.admanager.AdManagerAdView>


                <ns.kk.customview.CustomTextView
                    android:id="@+id/article_row_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="Ad"
                    tools:ignore="MissingConstraints" />
            </ns.kk.customview.CustomRelativeLayout>

        </LinearLayout>

    </ns.kk.customview.CustomScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>